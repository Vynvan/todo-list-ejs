<!DOCTYPE html>
<html>
<%- include('partials/head') %>
<body class="bg-primary bg-opacity-10">
	<div class="container">
        <%- include('partials/nav') %>
        <div class="text-center pt-5 mb-5">
            <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Registrierung</span></h1>
        </div>
        <form action="/register" method="POST">
            <label for="username">Benutzername:</label>
            <input type="text" id="username" name="username" required value="<%= locals.username ? locals.username : "" %>"><br><br>
    
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required value="<%= locals.name ? locals.name : "" %>"><br><br>
    
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required value="<%= locals.email ? locals.email : "" %>"><br><br>
    
            <label for="password">Passwort:</label>
            <input type="password" id="password" name="password" required value="<%= locals.password ? locals.password : "" %>"><br><br>
    
            <label for="password">Passwort best√§tigen:</label>
            <input type="password" id="password" name="password2" required><br><br>

            <% if (locals.error) { %>
                <p style="color:red"><%= locals.error %></p>
            <% } %>
            
            <button type="submit">Registrieren</button>
        </form>
        <%- include('partials/footer') %>
    </div>
</body>
</html>